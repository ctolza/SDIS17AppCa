<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity"
    tools:layout_editor_absoluteY="89dp">


    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="46.156259"
        mapbox:mapbox_cameraTargetLng="-1.11568"
        mapbox:mapbox_cameraZoom="11"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_normal_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/colorSecondary"
            android:src="@drawable/ic_normal_map"
            mapbox:rippleColor="@color/colorSecondary" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_ortho_photo_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/colorSecondary"
            android:src="@drawable/ic_ortho_photo_map"
            mapbox:rippleColor="@color/colorSecondary" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_forest_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/colorSecondary"
            app:srcCompat="@drawable/ic_forest_map"
            mapbox:rippleColor="@color/colorSecondary" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/colorSecondary"
            android:src="@drawable/ic_layers_black_24dp"
            mapbox:rippleColor="@color/colorSecondary" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_recentrageUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_margin="16dp"
            mapbox:srcCompat="@drawable/recenter_user_icone" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_affichageTrajet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_margin="16dp"
            mapbox:srcCompat="@drawable/ic_itineraire" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/recentrageDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            mapbox:srcCompat="@drawable/ic_fire_white" />
    </com.mapbox.mapboxsdk.maps.MapView>

    <TextView
        android:id="@+id/text_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Chargement des donnÃ©es..."
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/scale_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="80dp"
        android:paddingTop="0dp"
        android:paddingBottom="2dp"
        android:text="100km"
        android:visibility="invisible"
        android:textAlignment="center">


    </TextView>

    <ProgressBar
        android:id="@+id/progressData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
</FrameLayout>